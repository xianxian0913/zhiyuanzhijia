<view class="activity-photo">
	<image style="width: 100%;height: 500rpx;" mode="scaleToFill" src="{{photo}}"></image>
</view>
<view class="activity_title">
	<view class="activity-title1">{{title}}</view>
	<view class="activity-title2">{{_createTime}}</view>
</view>
<view class="activity_main">
	<view class="activity-proile">{{profile}}</view>
	<view class="activity-condition">报名条件：{{condition}}</view>
</view>
<view class="main">
	<view class="logo">
		<image src="../../images/deadline.png" mode="scaleToFill"></image>
	</view>
	<view class="title">报名截止时间</view>
	<view class="text">{{deadline}}</view>
</view>
<view class="main">
	<view class="logo">
		<image src="../../images/start.png" mode="scaleToFill"></image>
	</view>
	<view class="title">志愿活动时间</view>
	<view class="text">{{startTime}}</view>
</view>
<view class="main">
	<view class="logo">
		<image src="../../images/times.png" mode="scaleToFill"></image>
	</view>
	<view class="title">志愿活动时长</view>
	<view class="text">{{times}}h</view>
</view>
<view class="main">
	<view class="logo">
		<image src="../../images/location.png" mode="scaleToFill"></image>
	</view>
	<view class="title">志愿活动地点</view>
	<view class="text">{{location}}</view>
</view>
<view class="main">
	<view class="logo">
		<image src="../../images/remaiding.png" mode="scaleToFill"></image>
	</view>
	<view class="title">活动剩余名额</view>
	<view class="text">{{remaining_places}}</view>
</view>
<view class="application" bindtap="application" wx:if="{{yyzt==0}}">我要报名</view>
<view class="application" bindtap="cancellation" wx:if="{{yyzt==1}}">取消报名</view>